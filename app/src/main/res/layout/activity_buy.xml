<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.BuyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/packageName"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:text="Package Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/location"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:text="Location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/days"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:text="Days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:id="@+id/adult"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            android:text="Adult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:id="@+id/child"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            android:text="Child"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/stayAmount"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:text="Stay Amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/foodAmount"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:text="Food Amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:padding="8dp"
                    android:background="#FFF1BE"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="8dp"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:text="Transport (optional)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/train"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:text="Train"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </CheckBox>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/bus"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:text="Bus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </CheckBox>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/airplane"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:text="Airplane"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </CheckBox>

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:background="#A5EBFF"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            android:text="Total Amount:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/totalAmount"
                            android:gravity="right"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            android:text="20000 BDT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>
                <EditText
                    android:id="@id/name"
                    android:hint="Enter Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>
                <EditText
                    android:inputType="number"
                    android:id="@+id/phoneNo"
                    android:hint="Enter Phone No."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>

                <LinearLayout
                    android:background="#FAEFD3"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:text="Select Date"
                        android:id="@+id/selectDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <Button
                    android:text="Confirm"
                    android:id="@+id/confirm"
                    android:onClick="btnConfirm"
                    android:background="@drawable/button_ripple"
                    android:textColor="#fff"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Button>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>